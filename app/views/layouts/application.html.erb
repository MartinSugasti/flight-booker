<!DOCTYPE html>
<html>
  <head>
    <title>FlightBooker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p><%= alert %></p>
    <% end %>

    <%= render partial: 'shared/navbar' %>

    <%= yield %>
  </body>
</html>
